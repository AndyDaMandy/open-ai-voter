<div class="py-1 px-1 my-4">
<p>Enter Comment Below:</p>
<%= form_with(model: [@chat, @chat.comments.build], class: "contents") do |form| %>
    <div class="my-2">
        <%= form.label :name, "Optional - Name:" %><br>
        <%= form.text_field :name %>
    </div>
    <div>
    <%= form.label :content, "Comment" %><br>
    <%= form.text_area :content %>
    </div class="my-2">
    <div class="my-2">
        <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-800 text-white block font-medium"  %>
    </div>
<% end %>
</div>